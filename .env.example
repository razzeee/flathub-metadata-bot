# LLM Provider: "openai" or "ollama" (default: openai)
LLM_PROVIDER=ollama

# OpenAI API Key (required if LLM_PROVIDER=openai)
OPENAI_API_KEY=your_openai_api_key_here

# LLM Model name (optional)
# For OpenAI: gpt-4o-mini, gpt-4o, gpt-3.5-turbo, etc.
# For Ollama: llama3.2:1b, llama3.2, mistral, qwen2.5, phi3, etc.
LLM_MODEL=


# Ollama Base URL (optional, default: http://localhost:11435)
OLLAMA_BASE_URL=http://localhost:11435

# GitHub Personal Access Token (for creating PRs)
GITHUB_TOKEN=your_github_token_here

# GitLab Personal Access Tokens (optional, one for each instance)
GITLAB_TOKEN=your_gitlab_com_token_here
GITLAB_GNOME_TOKEN=your_gitlab_gnome_token_here
GITLAB_KDE_TOKEN=your_kde_invent_token_here
GITLAB_FREEDESKTOP_TOKEN=your_gitlab_freedesktop_token_here

# Codeberg Token (optional, for creating PRs on Codeberg)
CODEBERG_TOKEN=your_codeberg_token_here
