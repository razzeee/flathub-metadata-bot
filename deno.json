{
  "tasks": {
    "dev": "deno run --allow-net --allow-env --allow-read --allow-write --allow-run main.ts",
    "start": "deno run --allow-net --allow-env --allow-read --allow-write --allow-run main.ts",
    "generate": "deno run --allow-net --allow-read --allow-write --allow-env npm:orval",
    "test": "deno test --allow-net --allow-env --allow-read --allow-write --allow-run",
    "test:watch": "deno test --allow-net --allow-env --allow-read --allow-write --allow-run --watch",
    "test:coverage": "deno test --allow-net --allow-env --allow-read --allow-write --allow-run --coverage=coverage",
    "coverage": "deno coverage coverage --lcov --output=coverage/lcov.info",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "lint": "deno lint",
    "check": "deno check **/*.ts",
    "quality": "deno task fmt:check && deno task lint && deno task check && deno task test"
  },
  "imports": {
    "@langchain/core": "npm:@langchain/core@^0.3.0",
    "@langchain/openai": "npm:@langchain/openai@^0.3.0",
    "@langchain/ollama": "npm:@langchain/ollama@^0.1.0",
    "langchain": "npm:langchain@^0.3.0",
    "orval": "npm:orval@^7.16.0",
    "@std/fs": "jsr:@std/fs@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.0",
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/testing": "jsr:@std/testing@^1.0.0"
  },
  "compilerOptions": {
    "strict": true,
    "lib": ["deno.window", "esnext"]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve",
    "include": ["src/", "main.ts", "orval.config.ts"],
    "exclude": ["src/generated/", "cloned_repos/", "coverage/"]
  },
  "lint": {
    "include": ["src/", "main.ts", "orval.config.ts"],
    "exclude": ["src/generated/", "cloned_repos/", "coverage/"],
    "rules": {
      "tags": ["recommended"],
      "include": [
        "ban-untagged-todo",
        "no-const-assign",
        "no-eval",
        "no-throw-literal",
        "eqeqeq"
      ],
      "exclude": ["no-await-in-loop"]
    }
  },
  "test": {
    "include": ["tests/", "src/**/*.test.ts"],
    "exclude": ["cloned_repos/", "coverage/"]
  }
}
